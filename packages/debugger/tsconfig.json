{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "types": ["node",  "vite/client"],
    "paths": {
      "#store": ["./src/client/store.ts"],
      "#utils": ["./src/client/utils.ts"],
      "#types": ["./src/types.ts"],
      "@assets/*": ["./src/client/assets/*"],
      "@component/*": ["./src/client/components/*"],
      "@composable/*": ["./src/client/composables/*"],
      "@helpers/*": ["./src/client/helpers/*"],
      "@views/*": ["./src/client/views/*"],
      "@page/*": ["./src/client/pages/*"],
      "@styles/*": ["./src/client/styles/*"]
    }
  }
}
