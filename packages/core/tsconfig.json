{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "types": ["node", "vitest/importMeta"],
    "paths": {
      "@mocks/*": ["./tests/__mocks__/*"],
      "@test-modules/*": ["./tests/__mocks__/modules/*"],
      "@test-cases/*": ["./tests/cases/*"]
    }
  }
}
